{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.mate_check, .friend_check, .bestie_check, .bff_check{border-radius:50%; -webkit-border-radius:50%; -o-border-radius:50%; -moz-border-radius:50%; width:20px; height:20px;}
.mate_check{background:#DBAD93;}
.friend_check{background:#D85A25;}
.bestie_check{background:#387AB2;}
.bff_check{background:#74D2EF;}
 div:empty{display:block !important;}
.loyalty-table{width:100%;}

{%- endstyle -%}



<div class="mob-page-width{% unless section.settings.full_width %} page-width{% endunless %}">
        <div class="section-{{ section.id }}-padding">
        <div class="loyalty-table d-flex flex-align-center">
        {%- for block in section.blocks -%}
        
        <div class="loyalty-column">
            <div class="loyalty-th-head">
                {% if block.settings.level != blank %}
                    <span class="table-level">{{block.settings.level}}</span>
                {% endif %}

                {% if block.settings.table_heading != blank %}
                    <h2 class="table-heading">{{block.settings.table_heading}}</h2>
                {% endif %}

                {% if block.settings.spend_value != blank %}
                    <span class="spend-value">{{block.settings.spend_value}}</span>
                {% endif %}
            </div>
            <div class="loyalty-row-inner">
                {% if block.settings.row_text != blank %}
                <div class="table-row-text">{{block.settings.row_text}}</div>
                {% endif %}

                {% if block.settings.mate_check == true %}
                <div class="mate_check"></div>
                {% endif %}
            </div>
        </div>
        
        {%- endfor -%}
        </div>
        </div>
</div>

{% schema %}
{
  "name": "Loyalty Table",
  "tag": "section",
  "class": "section loyalty-table-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.collapsible_content.settings.heading.label",
      "default": "Collapsible content"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Table Row",
      "settings": [
        {
          "type": "text",
          "id": "level",
          "label": "Level"
        },
        {
          "type": "text",
          "id": "table_heading",
          "default": "Table row",
          "label": "Table Block Heading",
          "info": "Table Block Heading"
        },
        {
          "type": "text",
          "id": "spend_value",
          "label": "Spend Value"
        },
        {
          "type": "richtext",
          "id": "row_text",
          "label": "Row Text"
        },
        {
          "type": "checkbox",
          "id": "mate_check",
          "default": true,
          "label": "Mate Checkbox"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Loyal Table",
      "blocks": [
        {
          "type": "row"
        }
        
      ]
    }
  ]
}
{% endschema %}
